{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "./dist",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": "./src",
		"strict": false,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"watch": true
	},
	"exclude": [
		"node_modules",
	],
	"include": [
        "src/**/*"
    ]
}
